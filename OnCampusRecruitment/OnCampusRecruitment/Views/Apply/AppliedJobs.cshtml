@model IEnumerable<OnCampusRecruitment.Models.JobApplication>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}

<h2 style="font-weight: 900;">Applied Jobs</h2>

<hr />
<table class="table">
    <tr class="active">
        <th>
            @Html.DisplayNameFor(model => model.CompanyJobPost.CompanyProfile.GroupOfCompany)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyJobPost.DegreeTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyJobPost.FunctionArea)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyJobPost.CompanyProfile.GroupOfCompany)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyJobPost.DegreeTitle)
            </td>
            <td>                
                @Html.DisplayFor(modelItem => item.CompanyJobPost.FunctionArea)
            </td>  
            <td>
                @Html.ActionLink("Job Details", "Details", "Job", new { id = item.CompanyJobPostID }, new { @class="btn btn-default btn-sm"})
            </td>         
        </tr>
    }

</table>
