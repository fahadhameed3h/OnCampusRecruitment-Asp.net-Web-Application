@model OnCampusRecruitment.Models.CompanyLogo

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/CompanyDashboardLayout.cshtml";
}

<h2 style="font-weight:900">Upload Company Logo</h2>


@using (Html.BeginForm("Create", "Logo", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">       
        <hr />
        <div class="well">
            <div class="form-group" style="display:none">
                @Html.LabelFor(model => model.CompanyProfileID, "CompanyProfileID", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CompanyProfileID, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.CompanyProfileID } })
                    @Html.ValidationMessageFor(model => model.CompanyProfileID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Photo", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" id="PhotoContent" name="upload" accept="image/jpg, image/jpeg, image/png, image/tif" />
                    <p>Only .jpg , .jepg , .png , .TIF</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Upload" class="btn btn-group-lg btn btn-default" style="width: 80%;" />
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
