@model OnCampusRecruitment.Models.CompanyJobPost
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="font-weight: 800;"> Job Details</h2>
<hr />
<div class="row">
    <div class="col-md-5 well">
           <dl class="dl-horizontal">
            <dt>
                Company Name
            </dt>

            <dd style="padding-left:50px">
                @Html.DisplayFor(model => model.CompanyProfile.GroupOfCompany)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Industry)
            </dt>

            <dd style="padding-left:50px">
                @Html.DisplayFor(model => model.Industry)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.FunctionArea)
            </dt>

            <dd style="padding-left:50px">
                @Html.DisplayFor(model => model.FunctionArea)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TotalPosition)
            </dt>

            <dd style="padding-left:50px">
                @Html.DisplayFor(model => model.TotalPosition)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.JobType)
            </dt>

            <dd style="padding-left:50px">
                @Html.DisplayFor(model => model.JobType)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.JobLocation)
            </dt>

            <dd style="padding-left:50px">
                @Html.DisplayFor(model => model.JobLocation)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Gender)
            </dt>

            <dd style="padding-left:50px">
                @Html.DisplayFor(model => model.Gender)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Age)
            </dt>

            <dd style="padding-left:50px">
                @Html.DisplayFor(model => model.Age)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MinimumEducation)
            </dt>

            <dd style="padding-left:50px">
                @Html.DisplayFor(model => model.MinimumEducation)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DegreeTitle)
            </dt>

            <dd style="padding-left:50px">
                @Html.DisplayFor(model => model.DegreeTitle)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CareerLevel)
            </dt>

            <dd style="padding-left:50px">
                @Html.DisplayFor(model => model.CareerLevel)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ApplyBy)
            </dt>

            <dd style="padding-left:50px">
                @Html.DisplayFor(model => model.ApplyBy)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.JobPostingDate)
            </dt>

            <dd style="padding-left:50px">
                @Html.DisplayFor(model => model.JobPostingDate)
            </dd>
        </dl>
    </div>   

    <div class="col-md-5 well">

        <div class="active" style="font-weight:bolder">
            @Html.DisplayNameFor(model => model.JobDescription)
        </div>
        <br />
        <div class="well" style="padding-left:10px ; background-color:white">
            @Html.Raw(Model.JobDescription)
        </div>
        <hr />                          

        @Html.ActionLink("Apply", "Create", "Apply", new { id = Model.CompanyJobPostID }, new { @class = "btn btn-default" })
    </div>
</div>

    <p>
        @Html.ActionLink("Back to Jobs", "Jobs", "Home")
    </p>