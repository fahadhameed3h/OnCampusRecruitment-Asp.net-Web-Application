@model OnCampusRecruitment.Models.ProfilePhoto

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}

<h2 style="font-weight:900">Upload Profile Photo</h2>


@using (Html.BeginForm("Create", "ProfilePhoto", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">       
        <hr />
        <div class="well">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.EmpProfileID, new { @Value = ViewBag.EmpProfileID })

            <div class="form-group">
                @Html.Label("Photo", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" id="PhotoContent" name="upload" accept="image/jpg, image/jpeg, image/png, image/tif" />
                    <p>Only .jpg , .jepg , .png , .TIF</p>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Upload" class="btn btn-default" />
                </div>
            </div>

        </div>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
